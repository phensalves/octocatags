<p id="notice"><%= notice %></p>

<h1>Starred Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Github</th>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @starred_repositories.each do |starred_repository| %>
      <tr>
        <td><%= starred_repository.github_id %></td>
        <td><%= starred_repository.name %></td>
        <td><%= starred_repository.description %></td>
        <td><%= starred_repository.url %></td>
        <td><%= link_to 'Show', starred_repository %></td>
        <td><%= link_to 'Edit', edit_starred_repository_path(starred_repository) %></td>
        <td><%= link_to 'Destroy', starred_repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Starred Repository', new_starred_repository_path %>
